<% content_for(:title, '登録フォーム') %>
<section class="registar_form_wrap">
  <div class="registar_form">
    <h1 class="registar_form_ttl">登録フォーム</h1>
    <div class="registar_form_body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="registar_form_field">
          <%= f.text_field :user_id, autocomplete: "user_id", class: 'registar_form_text_input', required: "required", placeholder: " " %>
          <%= f.label :user_id, class: 'registar_form_text_input_label' %>
        </div>

        <div class="registar_form_field">
          <%= f.password_field :password, autocomplete: "new-password", class: 'registar_form_text_input', required: "required", placeholder: " " %>
          <%= f.label :password, "パスワード（8文字以上）", class: 'registar_form_text_input_label' %>
        </div>

        <div class="registar_form_field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'registar_form_text_input', required: "required", placeholder: " " %>
          <%= f.label :password_confirmation, class: 'registar_form_text_input_label' %>
        </div>

        <div class="registar_form_actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

